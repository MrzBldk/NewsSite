@model NewsSite.Models.RegisterModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div>
        <h4>@NewsSite.Resources.Resource.Registration</h4>
        <hr />
        @Html.ValidationSummary(false)

        <div class="form-group">
            <label for="FormEmail">@NewsSite.Resources.Resource.Email</label>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @id = "FormEmail", @placeholder = "email@example.com" } })
        </div>

        <div class="form-group">
            <label for="FormPassword">@NewsSite.Resources.Resource.Password</label>
            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @id = "FormPassword" } })
        </div>

        <div class="form-group">
            <label for="FormPassword">@NewsSite.Resources.Resource.PasswordConf</label>
            @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control", @id = "FormPasswordConform" } })
        </div>
        <button class="btn btn-primary" type="submit">@NewsSite.Resources.Resource.Register</button>
    </div>
}