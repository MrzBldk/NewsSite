@{
    ViewBag.Title = "CreateNews";
}

@model NewsSite.Models.NewsModel

@using (Html.BeginForm("CreateNews", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.ValidationSummary()
    <div class="form-group">
        <label>@NewsSite.Resources.Resource.Header</label>
        @Html.EditorFor(model => model.Header, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label>@NewsSite.Resources.Resource.Subheader</label>
        @Html.EditorFor(model => model.Subheader, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <label>@NewsSite.Resources.Resource.Text</label>
        @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control" } })
    </div>
    <div class="form-group">
        <input type="file" id="image" name="image"/>
    </div>
    <input type="submit"  value="@NewsSite.Resources.Resource.CreateNews"/>
}